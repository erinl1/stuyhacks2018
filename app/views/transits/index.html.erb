<p id="notice"><%= notice %></p>

<h1>Transits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transits.each do |transit| %>
      <tr>
        <td><%= transit.name %></td>
        <td><%= transit.status %></td>
        <td><%= link_to 'Show', transit %></td>
        <td><%= link_to 'Edit', edit_transit_path(transit) %></td>
        <td><%= link_to 'Destroy', transit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transit', new_transit_path %>

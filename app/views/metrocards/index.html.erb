<p id="notice"><%= notice %></p>

<h1>Metrocards</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrocards.each do |metrocard| %>
      <tr>
        <td><%= metrocard.student.name %></td>
        <td><%= link_to 'Show', metrocard %></td>
        <td><%= link_to 'Edit', edit_metrocard_path(metrocard) %></td>
        <td><%= link_to 'Destroy', metrocard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metrocard', new_metrocard_path, class: 'button', style: 'color: white' %>
<%= link_to 'Back', root_path, class: 'button', style: 'color: white'  %>

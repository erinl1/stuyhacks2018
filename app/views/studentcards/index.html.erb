<p id="notice"><%= notice %></p>

<h1>Studentcards</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studentcards.each do |studentcard| %>
      <tr>
        <td><%= studentcard.student.name %></td>
        <td><%= studentcard.student.student_uuid %></td>
        <td><%= link_to 'Show', studentcard %></td>
        <td><%= link_to 'Edit', edit_studentcard_path(studentcard) %></td>
        <td><%= link_to 'Destroy', studentcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Studentcard', new_studentcard_path, class: 'button', style: 'color: white' %>
<%= link_to 'Back', root_path, class: 'button', style: 'color: white'  %>

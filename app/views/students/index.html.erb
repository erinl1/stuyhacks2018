<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Metro UUID</th>
      <th>Student UUID</th>
      <th>Address</th>
      <th>School</th>
      <th>Time to School</th>
      <th>Lines</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.metro_uuid %></td>
        <td><%= student.student_uuid %></td>
        <td><%= student.address %></td>
        <td><%= student.school.name %></td>
        <td><%= student.time_to_school %></td>
        <td><%= student.lines %></td>
        <td><%= student.latitude %></td>
        <td><%= student.longitude %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: 'button', style: 'color: white'  %>
<%= link_to 'Back', root_path, class: 'button', style: 'color: white'  %>

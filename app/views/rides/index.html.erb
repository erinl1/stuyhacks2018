<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Metrocard</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= (ride.created_at).strftime("%D") %>
        <%= (ride.created_at).strftime("%I:%M:%S %p") %></td>
        <td><%= ride.metrocard.student.metro_uuid%></td>
        <td><%= ride.metrocard.student.name%></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path, class: 'button', style: 'color: white' %>
<%= link_to 'Back', root_path, class: 'button', style: 'color: white'  %>

<p id="notice"><%= notice %></p>

<h1>Swipes</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Studentcard</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @swipes.each do |swipe| %>
      <tr>
        <td><%= (swipe.created_at).in_time_zone("America/New_York").strftime("%D") %>
        <% swipe.time = (swipe.created_at).in_time_zone("America/New_York").strftime("%I:%M:%S %p").to_s %>
        <%= swipe.time %></td>
        <td><%= swipe.studentcard.student.student_uuid %></td>
        <td><%= swipe.studentcard.student.name %></td>
        <td><%= link_to 'Show', swipe %></td>
        <td><%= link_to 'Edit', edit_swipe_path(swipe) %></td>
        <td><%= link_to 'Destroy', swipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Swipe', new_swipe_path %>
